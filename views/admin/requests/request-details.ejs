<%- include('../../includes/head.ejs') %>

    <!-- NAVBAR -->
    <%- include('../../includes/navbar.ejs', {path: path, isLoggedIn: isLoggedIn, csrfToken: csrfToken, requestCount: requestCount, adminName: adminName}) %>

    <!-- HEADING -->
    <header class="bg-primary text-white py-1">
        <div class="container">
            <h1>"<%= request.name %>" request</h1>
        </div>
    </header>
    <!-- FEEDBACK -->
    <div class="collapse <%= successMessage||errorMessage?'show':'' %>" id="feedbackCollapse">
        <div class="card card-body fb <%= successMessage?'fb--success':'fb--error' %>">
            <button class="close"><span>&times;</span></button>
            <p class="fb__message m-0 p-0"><%= successMessage || errorMessage %></p>
        </div>
    </div>
    
    <!-- ADD SECTION -->
    <section id="buttons-section" class="bg-light py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-3 mr-auto">
                    <a href="/requests" class="btn btn-light btn-block text-dark">
                        <i class="fa fa-arrow-left"></i> Back To Requests
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/requests/accept/<%= request._id %>" class="btn btn-success btn-block text-white">
                        <i class="fa fa-check"></i> Accept Request
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/requests/reject/<%= request._id %>" class="btn btn-danger btn-block text-white">
                        <i class="fa fa-times"></i> Reject Request
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- EDIT POST SECTION -->
    <section class="py-4">
        <div class="container">
            <div class="row">
                <div class="col mb-3">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="header-title">Request Details</h3>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="form-group">
                                    <label for="title">Name</label>
                                    <input type="text" class="form-control" placeholder="<%= request.name %>" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="email">E-mail</label>
                                    <input type="text" class="form-control" placeholder="<%= request.email %>" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="date">Date of request</label>
                                    <input type="text" class="form-control" placeholder="<%= request.createdAt %>" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="description">Description</label>
                                    <textarea class="form-control" rows="5" readonly><%= request.description %></textarea>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- MAIN FOOTER -->
    <%- include('../../includes/footer.ejs') %>
    <!-- SCRIPTS AND END OF BODY -->
    <%- include('../../includes/end.ejs') %> 
</body>
</html>