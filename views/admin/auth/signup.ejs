<%- include('../../includes/head.ejs') %>


    <!-- NAVBAR -->
    <%- include('../../includes/navbar.ejs', {path: path, isLoggedIn: isLoggedIn, csrfToken: csrfToken }) %>

    <!-- HEADING -->
    <header class="bg-primary text-white py-1">
        <div class="container">
            <h1><i class="fa fa-user"></i> Blogen Admin Signup</h1>
        </div>
    </header>
    <!-- FEEDBACK -->
    <div class="collapse <%= successMessage||errorMessage?'show':'' %>" id="feedbackCollapse">
        <div class="card card-body fb <%= successMessage?'fb--success':'fb--error' %>">
            <button class="close"><span>&times;</span></button>
            <p class="fb__message m-0 p-0"><%= successMessage || errorMessage %></p>
        </div>
    </div>

    <!-- LOGIN SECTION -->
    <section id="login-card" class="py-5 mb-1">
        <div class="container">
            <div class="row mb-1">
                <div class="col-md-6 mx-auto mb-2">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4 class="card-title">Administration Request</h3>
                        </div>
                        <div class="card-body">
                            <form action="/auth/signup" method="POST" class="form-row mb-2">
                                <div class="form-group col-md-6">
                                    <label for="firstName">first Name</label>
                                    <input type="text" class="form-control <%= isFirstNameValid?'':'is-invalid' %>" name="firstName" id="firstName"<% if(oldInput){ %> value="<%= oldInput.firstName %>" <% } %>>
                                    <% if (!isFirstNameValid) { %>
                                        <div class="invalid-feedback d-block">
                                            <%= firstNameMessage %>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="lastName">Last Name</label>
                                    <input type="text" class="form-control <%= isLastNameValid?'':'is-invalid' %>" name="lastName" id="lastName" <% if(oldInput){ %> value="<%= oldInput.lastName %>" <% } %>>
                                    <% if (!isLastNameValid) { %>
                                        <div class="invalid-feedback d-block">
                                            <%= lastNameMessage %>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="form-group col-12">
                                    <label for="email">Email</label>
                                    <input type="email" class="form-control <%= isEmailValid?'':'is-invalid' %>" name="email" id="email" placeholder="e.g example@example.com" <% if(oldInput){ %> value="<%= oldInput.email %>" <% } %>>
                                    <% if (!isEmailValid) { %>
                                        <div class="invalid-feedback d-block">
                                            <%= emailMessage %>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="form-group col-12">
                                    <label for="password">Password</label>
                                    <input type="password" class="form-control <%= isPasswordValid?'':'is-invalid' %>" name="password" id="password" <% if(oldInput){ %> value="<%= oldInput.password %>" <% } %>>
                                    <% if (!isPasswordValid) { %>
                                        <div class="invalid-feedback d-block">
                                            <%= passwordMessage %>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="form-group col-12">
                                    <label for="description">Description</label>
                                    <textarea name="description" id="description" rows="4" class="form-control <%= isDescriptionValid?'':'is-invalid' %>" placeholder="Present your wrok experience and explain to us why you are a good choice."><% if(oldInput){ %><%= oldInput.description %><% } %></textarea>
                                    <% if (!isDescriptionValid) { %>
                                        <div class="invalid-feedback d-block">
                                            <%= descriptionMessage %>
                                        </div>
                                    <% } %>
                                </div>
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <input  class="btn btn-primary btn-block" type="submit" value="Send Request">
                            </form>
                                <a href="/auth/login" class="btn btn-light btn-block">Back to Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- MAIN FOOTER -->
    <%- include('../../includes/footer.ejs') %>

    <!-- SCRIPTS AND END OF BODY -->
    <%- include('../../includes/end.ejs') %> 
</body>
</html>