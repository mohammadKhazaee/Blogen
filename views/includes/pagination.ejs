<nav class="ml-4">
	<ul class="pagination">
		<li class="page-item <%= !hasPreviousPage? 'disabled':'' %>">
			<a class="page-link" href="?page=<%= previousPage %>">Previous</a>
		</li>
		<% if (previousPage !== 1 && beforePreviousPage !== 1 && currentPage !== 1) { %>
		<li class="page-item">
			<a class="page-link" href="?page=1">1</a>
		</li>
		<% } %> <% if (hasBeforePreviousPage) { %>
		<li class="page-item">
			<a class="page-link" href="?page=<%= beforePreviousPage %>"><%= beforePreviousPage %></a>
		</li>
		<% } %> <% if (hasPreviousPage) { %>
		<li class="page-item">
			<a class="page-link" href="?page=<%= previousPage %>"><%= previousPage %></a>
		</li>
		<% } %>
		<li class="page-item active">
			<a class="page-link" href="?page=<%= currentPage %>"><%= currentPage %></a>
		</li>
		<% if (hasNextPage) { %>
		<li class="page-item"><a class="page-link" href="?page=<%= nextPage %>"><%= nextPage %></a></li>
		<% } %> <% if (hasAfterNextPage) { %>
		<li class="page-item">
			<a class="page-link" href="?page=<%= afterNextPage %>"><%= afterNextPage %></a>
		</li>
		<% } %> <% if (nextPage !== lastPage && afterNextPage !== lastPage && currentPage !== lastPage)
		{ %>
		<li class="page-item">
			<a class="page-link" href="?page=<%= lastPage %>"><%= lastPage %></a>
		</li>
		<% } %>
		<li class="page-item <%= !hasNextPage? 'disabled':'' %>">
			<a class="page-link" href="?page=<%= nextPage %>">Next</a>
		</li>
	</ul>
</nav>
